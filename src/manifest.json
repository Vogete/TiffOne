{
    "manifest_version": 2,
    "name": "TiffOne",
    "version": "0.3",
    "description": "A small browser extension that displays TIFF (*.tiff) files (especially Alternatiff objects) with support for multi-page TIFF files.",
    "author": "Zoltán Fraknói",
    "minimum_chrome_version": "51",
    "icons": {
        "16": "assets/TiffOne_logo_16px.png",
        "32": "assets/TiffOne_logo_32px.png",
        "48": "assets/TiffOne_logo_48px.png",
        "128": "assets/TiffOne_logo_128px.png"
    },
    "web_accessible_resources": [
        "templates/*",
        "fonts/*",
        "css/printing.css"
    ],
    "permissions": [
        "*://*/*",
        "file://*/*",
        "storage"
    ],
    "browser_action": {
        "default_title": "TIffOne",
        "default_popup": "html/popup.html"
    },
    "background": {
        "scripts": [
            "libs/browser-polyfill.js",
            "js/helper.js",
            "js/background.js"
        ],
        "persistent": false
    }
}
