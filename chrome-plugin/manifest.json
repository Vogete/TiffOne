{
    "manifest_version": 2,
    "name": "AX Tiff Viewer",
    "version": "0.1",
    "description": "A plugin to view TIFF files from Microsoft Dynamics AX",
    "author": "Zoltan Fraknoi",
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        "templates/*",
        "fonts/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/tiff.min.js",
                "libs/jquery-3.4.1.min.js",
                "main.js"
            ],
            "css": [
                "css/styles.css",
                "css/font-awesome.min.css"
            ]
        }
    ]

}
